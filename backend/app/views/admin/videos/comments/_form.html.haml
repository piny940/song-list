= form_with(model: [:admin, @video, comment]) do |form|
  - if comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - comment.errors.full_messages.each do |message|
          %li= message
  
  .row.mb-3
    .col-md-3.col-form-label.fw-bold status
    .col-md-9= form.select :status, Comment.statuses_18n.invert, class: 'form-control'
  .row.mb-3
    .col-md-3.col-form-label.fw-bold response_json
    .col-md-9= form.text_area :response_json, class: 'form-control', size: '20x10'
  .row
    .col
      = form.submit '保存', class: 'btn btn-primary d-block w-100'
