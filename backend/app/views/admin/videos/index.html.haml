%h1 Video一覧
%table.table
  %thead.table-light
    %tr
      %th Thumbnail
      %th Video
      %th Kind
      %th PublishedAt
      %th Status
      %th Title
      %th Links

  %tbody
    %tr
      %td{colspan: 7}= link_to 'video新規作成', new_admin_video_path, class: 'btn btn-primary w-100'
    - @videos.each do |video|
      %tr
        %th= image_tag video.thumbnails["high"]["url"], width: 200
        %td= video.video_id
        %td= video.kind
        %td= video.published_at
        %td= video.status
        %td= video.title
        %td
          = link_to '歌リスト', admin_video_song_items_path(video), class: 'btn btn-sm btn-outline-primary'
          = link_to 'コメント一覧', admin_video_comments_path(video), class: 'btn btn-sm btn-outline-primary'
          = link_to '閲覧', admin_video_path(video), class: 'btn btn-sm btn-outline-primary'
          = link_to '編集', edit_admin_video_path(video), class: 'btn btn-sm btn-outline-primary'
          = link_to '削除', admin_video_path(video), method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-sm btn-outline-danger'
